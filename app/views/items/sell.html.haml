.main_container 
  = render 'layouts/single-header'
  .main-contents
    .main-contents__conteiner
      .main-contents__conteiner__inner
        %h2.header-text
          商品の情報を入力
        .sell-form
          =form_for @items, multipart:true do |f|
            .sell-form_image-box
              .sell-upload_text-top
                出品画像
                %span.required-tag 必須
              .sell-upload_text-bottom
                最大10枚までアップロードできます
              .sell-box_container
                .sell-box_container__drop-box
                  #sell-box_container__drop-box__text
                    ドラッグアンドドロップ
                    またはクリックしてファイルをアップロード
                    = f.fields_for :item_images do |fin|
                      %label#file-drop-zone
                        =fin.file_field :image, class: "file-send-btn", multiple: true
                        #preview
                      
            .sell-content
              .form_item-name
                %label 商品名
                %span.required-tag 必須
                = f.text_area :name, class: "input-name", placeholder: '商品名(必須 40文字まで)'
              .form_item-intro
                %label 商品の説明
                %span.required-tag 必須
                = f.text_area :detail, class: "input-intro", placeholder: '商品の説明 (必須 1,000文字以内) (色、素材、重さ、定価、注意点など) 例)2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。'
              .sell-content-detail
                %h3 商品の詳細
                .sell-form-box
                  .form-area
                    %label カテゴリー
                    %span.required-tag 必須
                    %div
                      .select-wrap
                        = f.fields_for :category do |fin|
                          = fin.collection_select :id, @category, :id, :name, prompt: "------", class: "select-place"
                          %i.fas.fa-chevron-down
                  .form-area.form-area_bottom
                    %label ブランド
                    %span.required-tag 任意
                    %div
                      .select-wrap
                        = f.fields_for :brand do |fin|
                          = fin.text_area :name, class: "select-place"
                          %i.fas.fa-chevron-down
                  .form-area.form-area_bottom
                    %label 商品の状態
                    %span.required-tag 必須
                    %div
                      .select-wrap
                        = f.select :condition, Item.conditions, prompt: "------", class: "select-place"
                        %i.fas.fa-chevron-down
              .sell-content-shipping-method
                %h3 配送について
                .form-help
                  %i.fas.fa-question-circle
                .sell-form-box
                  .form-area
                    %label 配送料の負担
                    %span.required-tag 必須
                    %div
                      .select-wrap
                        = f.select :delivery_cost, Item.delivery_costs, prompt: "------", class: "select-place"
                        %i.fas.fa-chevron-down
                  .form-area.form-area_bottom
                    %label 配送の方法
                    %span.required-tag 必須
                    %div
                      .select-wrap
                        = f.select :delivery_method, Item.delivery_methods, prompt: "------", class: "select-place"
                        %i.fas.fa-chevron-down
                  .form-area.form-area_bottom
                    %label 発送元の地域
                    %span.required-tag 必須
                    %div
                      .select-wrap
                        = f.select :delivery_prefecture, Item.delivery_prefectures, prompt: "------", class: "select-place"
                        %i.fas.fa-chevron-down
                  .form-area.form-area_bottom
                    %label 発送までの日数
                    %span.required-tag 必須
                    %div
                      .select-wrap
                        = f.select :days_to_ship, Item.days_to_ships, prompt: "------", class: "select-place"
                        %i.fas.fa-chevron-down
                      
              .contents-price
                %h3 販売価格(300~9,999,999)
                .form-help
                  %i.fas.fa-question-circle
                .sell-price_box
                  .sell-price_form
                    .price_form
                      .price_form-area
                        %label.left-text
                          価格
                          %span.required-tag 必須
                        .right-price_input
                          ¥
                          %div
                            = f.text_area :price, class: "price_input", placeholder: "例）300"
                    .price_fee
                      .left-text
                        販売手数料(10%)
                      .right-price

                    .profit
                      .left-text
                        販売利益
                      .right-price-maney

              .sell_button-box
                %div
                  %p
                    =link_to '禁止されている出品', "#", class:"notes__link"
                    、
                    =link_to '行為', "#", class:"notes__link"
                    を必ずご確認ください。
                  %p
                    またブランド品でシリアルナンバー等がある場合はご記載ください。
                    =link_to '偽ブランドの販売', "#", class:"notes__link"
                    は犯罪であり処罰される可能性があります。
                  %p
                    また、出品をもちまして
                    =link_to '加盟店規約', "#", class:"notes__link"
                    に同意したことになります。
                = f.submit "出品する", class: "btn-sell btn-red"
                = link_to "もどる", "/mypage", class: "btn-sell btn-gray"
          
  = render 'layouts/single-footer'