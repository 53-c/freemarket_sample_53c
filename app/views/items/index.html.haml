      %tbody
        %tr
          %th.th
            出品者
          %td.tp
            .p sachiko
            .face-mark 
              %li.list1
                = link_to root_path do
                  %i.far.fa-grin
                  3
              %li.list2
                = link_to root_path do
                  %i.far.fa-meh
                  5
              %li.list3
                = link_to root_path do
                  %i.far.fa-frown-open
                  1
        %tr
          %th.th
            カテゴリー
          %td.tp 
            .p レデイース
        %tr
          %th.th
            ブランド
          %td.tp
            .p ヴィス
        %tr
          %th.th
            商品のサイズ
          %td.td M
        %tr
          %th.th
            商品の状態
          %td.td
            新品、未使用
        %tr
          %th.th
            配送料の負担
          %td.td
            送料込み(出品者負担)
        %tr
          %th.th
            配送の方法
          %td.td
