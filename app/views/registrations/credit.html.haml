.single-container
  .single-header
    = link_to image_tag("logo.svg"), "/"
    .signup-container.signup-container__user
      %header.signup-header
        .signup-header__progress
          .progress
            .progress__node
              .progress__title#progress--first 会員情報
              .progress__dot
                .fas.fa-circle.circle-first.red
                .progress__line#first-line.progress-twe.red
            .progress__node
              .progress__title#progress--second.progress-twe 電話番号認証
              .progress__dot
                .fas.fa-circle#circle-second.progress-twe.red
                .progress__line#second-line.progress-three.red
            .progress__node
              .progress__title#progress--thired.progress-three お届け先住所入力
              .progress__dot
                .fas.fa-circle#circle-thired.progress-three.red
                .progress__line#thired-line.progress-four.red
            .progress__node
              .progress__title#progress--fourth.progress-four.red 支払い方法
              .progress__dot
                .fas.fa-circle#circle-fourth.progress-four.red
                .progress__line#fourth-line.progress-five
            .progress__node
              .progress__title#last-title.progress-five 完了
              .progress__dot
                .fas.fa-circle.circle-last.progress-five
  .single-main
    .single-main-container
      %h2.single-main-container__head 支払い方法
      .right-continer__inner
        .form-groups
          .form-group__first-font
            %label{for: "credit"} カード番号
            %span.required-tag 必須
            %input.input-default{placeholder: "半角数字のみ"}
            %ul.credit-brand_list
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?376951604', height: '20', width: '49'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?376951604', height: '20', width: '34'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?376951604', height: '20', width: '30'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?376951604', height: '20', width: '32'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?376951604', height: '20', width: '21'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?376951604', height: '20', width: '32'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?376951604', height: '20', width: '32'
          %br
          .form-group-font
            %label{for: "deadline"} 有効期限
            %span.required-tag 必須
            .select-wrap-birthday
              %select.select-place
                %option ---
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %i.fas.fa-angle-down.font-color-gray#deadline
              %p.birthday.font-size-small 月
            .select-wrap-birthday
              %select.select-place
                %option ---
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %i.fas.fa-angle-down.font-color-gray#deadline
              %p.birthday.font-size-small 年
          .form-groups
            .form-group-font
              %label{for: "secrity"} セキュリティーコード
              %span.required-tag 必須
              %input.input-default{placeholder: "カード背面4桁もしくは3桁の番号"}
          .form-group.text-right
            = link_to 'https://www.mercari.com/jp/help_center/article/423/', id: "font-color-blue", target: "_blank" do
              %i.fas.fa-question-circle
              カード裏面の番号とは？
          %input{type: "submit", value: "次へ進む", class: "btn-default button-red"}

  = render 'layouts/single-footer'
