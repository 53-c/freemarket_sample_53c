.single-container
  .single-header
    = link_to image_tag("logo.svg"), "/"
    .signup-container.signup-container__user
      %header.signup-header
        .signup-header__progress
          .progress
            .progress__node
              .progress__title#progress--first 会員情報
              .progress__dot
                .fas.fa-circle.circle-first.red
                .progress__line#first-line.progress-twe.red
            .progress__node
              .progress__title#progress--second.progress-twe 電話番号認証
              .progress__dot
                .fas.fa-circle#circle-second.progress-twe.red
                .progress__line#second-line.progress-three.red
            .progress__node
              .progress__title#progress--thired.progress-three.red お届け先住所入力
              .progress__dot
                .fas.fa-circle#circle-thired.progress-three.red
                .progress__line#thired-line.progress-four
            .progress__node
              .progress__title#progress--fourth.progress-four 支払い方法
              .progress__dot
                .fas.fa-circle#circle-fourth.progress-four
                .progress__line#fourth-line.progress-five
            .progress__node
              .progress__title#last-title.progress-five 完了
              .progress__dot
                .fas.fa-circle.circle-last.progress-five
  .single-main
    .single-main-container
      %h2.single-main-container__head 発送元・お届け先住所入力
      .right-continer__inner
        .form-groups
          .form-group__first-font
            %label{for: "relative_name"} お名前
            %span 必須
            %input.input-default{placeholder: "例) 山田"} 
            %input.input-default{placeholder: "例) 彩"} 
          .form-group-font
            %label{for: "relative_name_kana"} お名前カナ
            %span 必須
            %input.input-default{placeholder: "例) ヤマダ"} 
            %input.input-default{placeholder: "例) アヤ"}
          .form-group-font
            %label{for: "postal_code"} 郵便番号
            %span 必須
            %input.input-default{placeholder: "例) 123-4567"}
          .form-group-font
            %label{for: "prefecture"} 都道府県
            %span 必須
            .select-wrap
              %select.select-default{:name => "prefecture"}
                %option --
                %option 北海道
                %option 青森県
                %option 岩手県
                %option 宮城県
                %option 秋田県
                %option 山形県
                %option 福島県
                %option 東京都
                %option 神奈川県
                %option 埼玉県
                %option 千葉県
                %option 茨城県
                %option 栃木県
                %option 群馬県
                %option 山梨県
                %option 新潟県
                %option 長野県
                %option 富山県
                %option 石川県
                %option 福井県
                %option 愛知県
                %option 岐阜県
                %option 静岡県
                %option 三重県
                %option 大阪府
                %option 兵庫県
                %option 京都府
                %option 滋賀県
                %option 奈良県
                %option 和歌山県
                %option 鳥取県
                %option 島根県
                %option 岡山県
                %option 広島県
                %option 山口県
                %option 徳島県
                %option 香川県
                %option 愛媛県
                %option 高知県
                %option 福岡県
                %option 佐賀県
                %option 長崎県
                %option 熊本県
                %option 大分県
                %option 宮崎県
                %option 鹿児島県
                %option 沖縄県
              %i.fas.fa-angle-down.font-color-gray.icon-angle
          .form-group__first-font
            %label{for: "city"} 市区町村
            %span 必須
            %input.input-default{placeholder: "例) 横浜市緑区"} 
          .form-group-font
            %label{for: "block"} 番地
            %span 必須
            %input.input-default{placeholder: "例) 青山1-1-1"} 
          .form-group-font
            %label{for: "building"} 建物名
            %span#form-arbitrary 任意
            %input.input-default{placeholder: "例) 柳ビル103"} 
          .form-group-font
            %label{for: "home_phone"} 電話
            %span#form-arbitrary 任意
            %input.input-default{placeholder: "例) 09012345678"}

          %input{type: "submit", value: "次へ進む", class: "btn-default button-red"}

  = render 'layouts/single-footer'



