.header-container
  = render "layouts/single-header"
  %main.main-container
    .login-container
      .sign-up-nav
        %p.sign-up-nav__text
          アカウントをお持ちでない方はこちら
        %p.sign-up-nav__link
          = link_to '新規会員登録', '/signup',class: 'sign-up-nav__btn'
      .other-account-nav 
        .other-account-nav__facebook
          .other-account-nav__facebook__icon
            %i.fab.fa-facebook-square
          = link_to "Facebookでログイン",user_facebook_omniauth_authorize_path, class:"other-account-nav__facebook__btn"
        .other-account-nav__google
          .other-account-nav__google__icon
            %i.fab.fa-google
          = link_to 'Googleでログイン',user_google_omniauth_authorize_path,class:"other-account-nav__google__btn"
      .login-nav
        .form-container
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-container__email
              = f.email_field :email, placeholder:"メールアドレス", class: "form-container__email__input"
            .form-container__password
              = f.password_field :password, placeholder:"パスワード", class: "form-container__password__input"
            .confirm-robot
            .form-container__submit
              = f.submit "ログイン", class: "form-container__submit__btn"
          .forget-password
            = link_to 'パスワードをお忘れの方', class: 'forget-password__btn'
  = render 'layouts/single-footer'
