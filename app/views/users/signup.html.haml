.single-container
  = render "layouts/single-header"
  .single-main
    .single-main-container
      %h2.single-main-container__head 新規会員登録
      .single-main-container__inner
        .single-main-container__inner--content
          = link_to new_user_registration_path ,class: 'btn-default btn-mail' do
            メールアドレスで登録する
            %i.far.fa-envelope
          = link_to "Facebookで登録する", user_facebook_omniauth_authorize_path, class: "btn-default btn-sns btn-sns-facebook"
          = link_to "Googleで登録する", user_google_omniauth_authorize_path, class: "btn-default btn-sns btn-sns-google"

  = render 'layouts/single-footer'
